<!-- Banner -->
<% max_level = Spree::Config[:max_level_in_taxons_menu] || 1 %>
<div class="sec-banner bg0 p-t-80 p-b-50">
    <div class="container">
        <div class="row">
        <% cache [@current_store.code, I18n.locale, max_level, mobile_device?] do %>
        <% @current_store.taxons.where(taxonomy_id: 2)[1..-1].each do |taxon| %>
            <div class="col-md-6 col-xl-4 p-b-30 m-lr-auto">
                <!-- Block1 -->
                <div class="block1 wrap-pic-w">
                    <%= image_tag taxon.icon.url(:original) %>
                    <%= link_to(seo_url(taxon), class: "block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3") do %>
                        <div class="block1-txt-child1 flex-col-l">
                            <span class="block1-name ltext-102 trans-04 p-b-8">
                                <%= taxon.name %>
                            </span>
                            <span class="block1-info stext-102 trans-04">
                                New Trend
                            </span>
                        </div>

                        <div class="block1-txt-child2 p-b-4 trans-05">
                            <div class="block1-link stext-101 cl0 trans-09">
                                Shop Now
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        <% end %>
        <% end %>
        </div>
    </div>
</div>




					
								           
                
            