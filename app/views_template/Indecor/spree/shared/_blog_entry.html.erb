<div class="col-md-12">
    <!--Single Blog Start-->
    <div class="single-blog">
        <div class="blog-img img-full">
            <%= link_to  blog_entry_permalink(blog_entry) do %>
                <%= image_tag(blog_entry.blog_entry_image.attachment.url(:large))%>
                <span class="icon-view"></span>
            <% end %>
        </div>
        <div class="blog-content">
            <h3 class="blog-title"><%= link_to blog_entry.title, blog_entry_permalink(blog_entry) %></h3>
            <div class="blog-meta">
                <p class="author-name">post by: <span>
                    <% if blog_entry.author.present?%>
                        <%= blog_entry.author.nickname %>
                    <% else %>
                        Admin
                    <% end %>
                    </span> - <%= blog_entry.created_at.strftime("%d/%m/%Y") %></p>
            </div>
            <%= link_to "Xem thÃªm", blog_entry_permalink(blog_entry), class: "read-btn" %>
        </div>
    </div>
    <!--Single Blog End-->
</div>