<% if defined? edit_enabled
    state = ""
    name  = "review[rating]"
  else
    state = 'disabled'
    name  = defined?(review).nil? ? Time.now.tv_usec.to_s : "1review_#{review}"
  end %>

<% p "-----------"%>
<% for i in 1..NB_STARS %>
  <input name="<%= name %>"
         type="radio" class="star"
         value="<%= pluralize(i, 'stars') %>" <%= state %>
         <%= "checked" if i == stars %> />
<% end %>
