<table>
<% @orders.each do |order| %>
	<% rotate = cycle("odd", "even") %>
	<td style="width: 50%; height: 200px; border: 1px solid black; font-size: 18px; <%= 'padding-right: 10px; margin-bottom: 10px; margin-top: 10px' if rotate == 'odd' %> <%= 'padding-left: 10px;' if rotate == 'even' %>">
		<table>
				<tr style="width: 50%">
					<td style="width: 50%;">
						<div style="font-size: 17px;">Fr: DongHoX.com (Dư Thị Ngọc Giàu) </div>
						<div style="font-size: 17px;">DC: 58 đường 30/4 P.Tân Thành, Q.Tân Phú, TP.HCM</div>
						<div style="font-size: 17px; font-weight: bold;">Nếu không phát được vui lòng liên hệ SDT: </div>
						<div style="font-size: 17px; font-weight: bold;">0908.482.804 | 0909.972.242 | 0169.2620.558</div>
<!-- 						<div style="font-size: 17px; font-weight: bold;">Đồng ý cho khách kiểm tra hàng hóa trước khi thanh toán</div> -->
					</td>
				</tr>
				<tr style="width: 50%">
				<tr>
					<td style="width: 50%; height: 140px"></td>
				</tr>
				<tr style="width: 50%">
					<td style="width: 50%; padding-left: 80px">
						<div style="font-size: 17px;">To: <%= order.bill_address.firstname + " (COD: #{order.display_total})" %> </div>
						<div style="font-size: 17px;"><%= "SDT: #{order.bill_address.formatted_phone}" %></div>
						<div style="font-size: 17px;">DC: <%= "#{order.bill_address.address1}, #{order.bill_address.district.name}, #{order.bill_address.state.name}" %></div>
					</td>

				</tr>
		</table>
	</td>
	<% if rotate == "even" %>
		</tr>
	<% end %>
<% end %>

</table>
