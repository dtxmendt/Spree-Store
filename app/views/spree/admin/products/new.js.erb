  $("#new_product_wrapper .filter-actions >a").hide();
  $("#new_product_wrapper .filter-actions >span").hide();
  $("#new_product_wrapper .filter-actions >button").attr("disabled", true).css('background', '#10131170');
  $("#product_name").change(function(){
    if($(this).val().trim().length >= 3){
      $("#new_product_wrapper .filter-actions >button").attr("disabled", false).css('background', '#3acf87');
    }
  else{
  $("#new_product_wrapper .filter-actions >button").attr("disabled", true).css('background', '#10131170');

    }
  })

});
