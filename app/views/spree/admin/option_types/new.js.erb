$("#new_option_type").html('<%= escape_javascript(render :template => "spree/admin/option_types/new", :formats => [:html], :handlers => [:erb]) %>').promise().done(()=>{
    $(".form-buttons a.button").removeAttr("href");
    $(".new-opty-wrapper").addClass("active");
    $(".form-buttons a.button").click(()=>{
        $(".new-opty-wrapper").removeClass("active");
    })
});
