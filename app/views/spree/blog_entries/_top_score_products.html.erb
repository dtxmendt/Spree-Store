<% if top_score_products.present? %>
  <div class="recent_blog_entries_wrapper">
    <h4><%= Spree.t('blog.top_score') %></h4>
    <ul class="recent_blog_entries">
      <% top_score_products.each do |product| %>
        <li>
          <%= link_to product_path(product) do %>
            <%= thumbnail_image(product, :itemprop => "image", onerror: "this.onerror=null;this.src='#{root_url.to_s}assets/no_image.png'")%>
            <div>
              <%= product.name %>
            </div>
          <% end %>
          <div><span><i class="fa fa-chevron-circle-right "></i> </span> <span> <%= display_price(product)%></span></div>
          <div class="clearfix"></div>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>